<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <Color x:Key="ZFGColor">Red</Color>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <Color x:Key="ZFGColor">Green</Color>
            <SolidColorBrush x:Key="ZAccentBrushMedium" Color="Green" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Default">
            <Color x:Key="ZFGColor">Blue</Color>
            <SolidColorBrush x:Key="ZAccentBrushMedium" Color="DeepSkyBlue" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
